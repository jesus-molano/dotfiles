{
  "env": {
    "SLASH_COMMAND_TOOL_CHAR_BUDGET": "16000",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "80",
    "MAX_MCP_OUTPUT_TOKENS": "20000"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(pnpm *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(yarn *)",
      "Bash(node *)",
      "Bash(nvm *)",
      "Bash(fnm *)",
      "Bash(git *)",
      "Bash(* --version)",
      "Bash(* --help)",
      "Bash(ls *)",
      "Bash(which *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(touch *)",
      "Bash(chmod +x *)",
      "Bash(biome *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(tsc *)",
      "Bash(vue-tsc *)",
      "Bash(nuxt *)",
      "Bash(next *)",
      "Bash(vitest *)",
      "Bash(playwright *)",
      "Bash(gh *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(jq *)",
      "Bash(curl *)",
      "Bash(stow *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -fd*)",
      "Bash(rm -rf .*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(*/.env)",
      "Read(*/.env.*)",
      "Read(**/.credentials*)",
      "Read(**/*secret*)",
      "Write(.env)",
      "Write(.env.*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-edit-format.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-edit-protect.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-compact-context.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "lua-lsp@claude-plugins-official": true
  },
  "language": "es",
  "alwaysThinkingEnabled": true
}
