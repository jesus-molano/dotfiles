{
  "env": {
    "SLASH_COMMAND_TOOL_CHAR_BUDGET": "20000"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(pnpm *)",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git stash*)",
      "Bash(git checkout*)",
      "Bash(git switch*)",
      "Bash(git merge*)",
      "Bash(git rebase*)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git remote*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(git cherry-pick*)",
      "Bash(git rev-parse*)",
      "Bash(git tag*)",
      "Bash(* --version)",
      "Bash(* --help)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(find *)",
      "Bash(which *)",
      "Bash(echo *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(touch *)",
      "Bash(chmod +x *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(biome *)",
      "Bash(tsc *)",
      "Bash(vue-tsc *)",
      "Bash(nuxt *)",
      "Bash(next *)",
      "Bash(vitest *)",
      "Bash(jest *)",
      "Bash(playwright *)",
      "Bash(gh *)",
      "Bash(jq *)",
      "Bash(curl *)",
      "Bash(docker *)",
      "Bash(docker-compose *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -fd*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(*/.env)",
      "Read(*/.env.*)",
      "Read(**/.credentials*)",
      "Read(**/*secret*)",
      "Write(.env)",
      "Write(.env.*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-edit-format.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-edit-protect.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-compact-context.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
